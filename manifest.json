{
  "manifest_version": 2,

  "name": "Follow & Delete GitHub Emails",
  "version": "0.1",
  "description": "Click that \"View on GitHub\" link then delete the email.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.1.3.min.js", "main.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "http://mail.google.com/",
    "https://mail.google.com/"
  ],
  "browser_action": {
    "default_title": "HIIIIIIIIIIIIIIIIIIII I AM A TITLE",
    "default_icon": "icon.png"
  }
}
